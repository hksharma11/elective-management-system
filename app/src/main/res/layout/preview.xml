<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Choices"
        android:textSize="25sp"
        android:layout_marginTop="15sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:id="@+id/preview_textview1"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:textColor="#000"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:id="@+id/preview_textview2"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:textColor="#000"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:id="@+id/preview_textview3"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:textColor="#000"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:id="@+id/preview_textview4"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:textColor="#000"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:id="@+id/preview_textview5"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:textColor="#000"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:id="@+id/preview_textview6"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:textColor="#000"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:id="@+id/preview_textview7"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:textColor="#000"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginBottom="30sp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:id="@+id/preview_button_submit"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"/>

</LinearLayout>